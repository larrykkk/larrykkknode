{{#each article}}
<article>
    <a href="#" onclick="Edit('{{this.title}}')">編輯</a>
    <a href="#" class="text-danger" onclick="Delete('{{this.title}}')">刪除</a>
    <div>
        <img src="{{this.imgUrl}}" alt="">
    </div>
    <h3 class="article-title">{{this.title}}</h3>
    <p>
        {{this.content}}
    </p>
</article>
<hr>
{{/each}}



<script>
    //編輯、刪除、查詢
    function Edit(id) {
        window.location.href = window.location.pathname + "/edit?id=" + id;
    }
    function Delete(id) {
        var rs = confirm("Confirm to delete?");
        if (rs) {
            window.location.href = window.location.pathname + "/delete?id=" + id;
        }
    }
    function Search() {
        var userid = document.getElementsByName("suserid")[0].value;
        window.location.href = "/?user=" + userid;
    }
</script>